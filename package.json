{
  "name": "iknittheweb-website",
  "version": "1.0.0",
  "description": "I Knit The Web - Personal Portfolio Website",
  "scripts": {
    "build:dev": "node build.js development",
    "build:prod": "node build.js production",
    "dev": "npm run build:dev",
    "deploy": "npm run build:prod",
    "lint": "eslint \"src/**/*.js\" build.js component-build.js",
    "format": "prettier --write \"src/**/*.{js,css,scss,html}\" build.js component-build.js",
    "test": "jest",
    "test:e2e": "cypress open",
    "test:style": "stylelint \"src/**/*.scss\"",
    "test:a11y": "node tests/example.accessibility.js",
    "prepare": "husky install",
    "//": "ðŸš¨ REMEMBER: Run 'npm run dev' after editing template, 'npm run deploy' before going live!"
  },
  "keywords": [
    "web development",
    "portfolio",
    "HTML",
    "CSS",
    "JavaScript"
  ],
  "author": "I Knit The Web",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "axe-core": "^4.10.3",
    "babel-jest": "^30.2.0",
    "commitizen": "^4.3.1",
    "cypress": "^15.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "stylelint": "^16.24.0",
    "stylelint-config-recommended-scss": "^16.0.2",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-scss": "^6.12.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
